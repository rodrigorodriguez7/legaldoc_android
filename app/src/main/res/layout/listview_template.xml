<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de obtenciÃ³n del servicio"
            android:typeface="sans"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView android:id="@+id/lblfechaCreacionOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000080"
            android:textSize="18dp"
            android:typeface="sans"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad de servicios obtenidos"
            android:typeface="sans"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView android:id="@+id/lbltotalServicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000080"
            android:textSize="18dp"
            android:typeface="sans"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto del servicio"
            android:typeface="sans"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView android:id="@+id/lblmontoOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000080"
            android:typeface="sans"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver mas..."
            android:typeface="sans"
            android:textSize="22dp"
            android:textColor="#800080"/>
        <TextView
            android:id="@+id/lblid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textColor="#000080"
            android:textSize="18dp"
            android:typeface="sans"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>